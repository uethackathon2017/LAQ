<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textColor="#ffffff"
    android:id="@+id/settingFullScreen"
    >

    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/settingFragment"
        >

        <ImageView
            android:layout_margin="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/setting_bg_new"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:id="@+id/imageView" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:splitMotionEvents="false"
            android:layout_alignTop="@+id/imageView"
            android:layout_marginTop="90dp"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="100dp"
            android:id="@+id/relativeLayout2"
            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/menu_music"
                android:id="@+id/menu_music"
                android:layout_alignParentLeft="true"
                />

            <Switch
                android:id="@+id/switch1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textOff="OFF"
                android:textOn="ON"
                android:layout_below="@+id/menu_sound"
                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/menu_sound"
                android:id="@+id/menu_sound"
                android:layout_alignParentRight="true"
                />

            <Switch
                android:id="@+id/switch2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textOff="OFF"
                android:textOn="ON"
                android:layout_below="@id/menu_music"
                android:layout_alignParentRight="true"
                />


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="laq3096@gmail.com"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:layout_marginTop="75dp"
            android:id="@+id/menuTextViewEmail"
            android:layout_below="@+id/relativeLayout2"
            android:layout_alignLeft="@+id/relativeLayout2"
            android:layout_alignStart="@+id/relativeLayout2"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp" />
    </RelativeLayout>

</RelativeLayout>
