<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textColor="#ffffff"
    >

    <RelativeLayout
        android:background="@null"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scoreboardFragment"
        >

        <ImageView
            android:layout_margin="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/play_fragment_bg"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:id="@+id/imageView" />

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="37dp"
            android:id="@+id/relativeLayout3">

            <ImageButton
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="@null"
                android:src="@drawable/play_fragment_play_again"
                android:id="@+id/playFragmentPlayAgain2"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                />

            <ImageButton
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="@null"
                android:src="@drawable/play_fragment_play_again"
                android:id="@+id/playFragmentPlayAgain"
                android:layout_centerHorizontal="true" />

            <ImageButton
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="@null"
                android:src="@drawable/play_fragment_save"
                android:id="@+id/playFragmentSave"
                android:layout_below="@+id/playFragmentPlayAgain"
                />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playFragmentTextViewScore"
            android:text="100"
            android:textColor="#ffffff"
            android:textSize="60dp"
            android:layout_above="@+id/relativeLayout3"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wrongOrSlow"
            android:layout_marginTop="5dp"
            android:textSize="25dp"
            android:textColor="#FDE25F"
            android:layout_alignTop="@+id/imageView"
            android:gravity="center"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

</RelativeLayout>
